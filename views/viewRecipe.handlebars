    <section class="container-fluid mt-4">
        <div class=" row my-1 ">

            {{!-- {{#each recipe}} --}}

            <div class="container-fluid">

                <div class="img-background  p-4 text-center">
                    <p class="large  text-light">{{recipe.title}}</p>
                    <p class="lead text-light">Author:
                        {{recipe.user}}</p>

                    <img src="{{recipe.image}}" alt="" id="recipe-image" class="" style="border:10px double white;" />
{{#if exist}}
<button class="btn btn-sm btn-danger text-center disabled m-3 " >Added</button>

                 

    {{else}}     
    <form action="/collection/add" method="POST">
                        <input type="hidden" name="title" value="{{recipe.title}}">
                        <input type="hidden" name="image" value="{{recipe.image}}">

                        <input type="hidden" name="recipeId" value="{{recipe._id}}">
                        <button class="btn btn-danger text-center m-3 " >Add to my collection</button>
                    </form>

      {{/if}}          
      </div>
            </div>


        </div>
        <!-- About -->
        <div class=" bg-light p-2 my-3">
            <h2 class="text-danger">Description</h2>
            <p>
                {{recipe.description}}
            </p>
            <div class="line"></div>
            <h2 class="text-danger">Info</h2>
            <div class="skills">
                <div class="p-1"><i class="fas fa-check"></i>Serving:
                    {{recipe.serving}}</div>
                <div class="p-1"><i class="fas fa-check"></i>Total Time Taken:{{recipe.totaltime}}</div>
                <div class="p-1">
                    <i class="fas fa-check"></i> Cooking Time:{{recipe.cookingtime}}
                </div>
                <div class="p-1"><i class="fas fa-check"></i>Prep Time:{{recipe.preptime}}</div>
                <div class="p-1"><i class="fas fa-check"></i>Difficulty Level:{{recipe.difficulty}}</div>
                <div class="p-1"><i class="fas fa-check"></i>Cuisine:{{recipe.cuisine}}</div>
            </div>
        </div>
        <!-- Ingredients -->
        <div class=" bg-light p-2 my-3">
            <div class="row ">
                <div class="col-4">
                    <h2 class="text-danger ">Ingredients</h2>
                    <div  class="d-flex justify-content-flex-start">
                         <div  class="">
                        <ul class="">
                            {{#each recipe.ingredients.quantity}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="">
                        <ul class="mx-2">
                            {{#each recipe.ingredients.item}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                   
                </div>
                </div>
                <div class="col-6">
                    <!-- Instructions -->
                    <div class="  p-2">
                        <h2 class="text-danger ">Instructions</h2>
                        <div>
                            <p class="">
                                {{recipe.instructionsteps}}
                            </p>

                            <p>
                                Description:Lorem ipsum, dolor sit amet consectetur adipisicing
                                elit. Dicta quos unde distinctio laborum qui tempora?Lorem ipsum
                                dolor sit amet consectetur adipisicing elit. Quam aspernatur
                                tenetur impedit quis molestiae non quisquam magnam modi
                                exercitationem eius.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- {{/each}} --}}
        <!-- REVIEW -->
   <div class="row my-3 ">
           <h2 class="text-danger">
               REVIEWS
           </h2>
           <div class="col-md-12">
               <form class="" action="/recipe" method="POST">
               <div class="stars">
               <input type="radio" name="star" class="star-1" id="star-1" value="1"/>
               <label class="star-1" for="star-1" name="rating">1</label>
               <input type="radio" name="star" class="star-2" id="star-2" value="2" />
               <label class="star-2" for="star-2" name="rating">2</label>
               <input type="radio" name="star" class="star-3" id="star-3" value="3"/>
               <label class="star-3" for="star-3" name="rating">3</label>
               <input type="radio" name="star" class="star-4" id="star-4" value="4"/>
               <label class="star-4" for="star-4" name="rating">4</label>
               <input type="radio" name="star" class="star-5" id="star-5" value="5"/>
               <label class="star-5" for="star-5" name="rating">5</label>

               <span></span>
           </div>
                   <div class="form-group">
                       {{!-- <label for="exampleInputEmail1">{{this.username}}</label> --}}
                       <input type="hidden" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                           placeholder="" name="username" value="{{this.username}}" />
                   </div>
                   <div class="form-group">
                       <label for="exampleInputPassword1">Review</label>
                       <textarea type="textarea" class="form-control" rows="5" id="exampleInputPassword1"
                           placeholder="" name="review"></textarea>
                   </div>
                   <input type="submit" class="btn btn-danger btn-block" value="add review">
               </form>
           </div>
       </div>
    {{#each rating}}

       {{!-- <div class="row my-3 bg-white"> --}}
           <div class="col-md-12">
               <div class="commentbox">
               <div class="stars" >
                   <div>
                       <h4 class="my-1">
                           <a href="" class="text-danger">{{this.username}}</a>
                       </h4>
                       <p>
                           {{this.review}}
                       </p>
                   </div>
                   <div>
                       <ul>
                           <li class="badge badge-dark d-none" id="rating{{@index}}">{{this.rating}}</li>
                           <p id="output{{@index}}"></p>
                       </ul>
                   </div>
               </div>
               <hr>
           </div>
       </div>
       </div>
       {{/each}}

</section>
 
