    <!-- ADD FORM -->
    <form class=" pt-5 my-5 mx-5  p-4 bg-dark text-light" method="POST" action="/add" id="form" style="font-size:19px;" enctype="multipart/form-data">
      <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input
          type="text"
          class="form-control"
          id="exampleInputEmail1"
          name="title" required
        />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Brief Description:</label>
        <textarea
          type=""
          class="form-control"
          id="exampleInputPassword1"
          placeholder=""
          name="description"
          required
        ></textarea>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Categorize your recipe:</label>
        <div class="row">
          <div class="col-4">
            <label for="exampleFormControlSelect1">Recipe Type:</label>
            <input
              type="text"
              class="form-control"
              id="exampleInputEmail1"
              name="recipetype" required
            />
          </div>
          <div class="col-4">
            <label for="exampleFormControlSelect1"> Cuisine:</label>
            <input
              type="text"
              class="form-control"
              id="exampleInputEmail1"
              name="cuisine" required
            />
          </div>
          <div class="col-4">
            <label for="exampleFormControlSelect1"> Skill Level:</label>
            <select
              class="form-control"
              id="exampleFormControlSelect1"
              name="difficulty"
            >
              <option>Begginers</option>
              <option>Intermediate</option>
              <option>Advanced</option>
            </select>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1"># of serving</label>
        <input
          type="number"
          class="form-control"
          id="exampleInputEmail1"
          name="serving" required
        />
      </div>
      Ingredients
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col" style="color:white">
              Quantity
            </th>
            
            <th scope="col"  style="color:white">Item</th>
          </tr>
        </thead>
        <tbody class="tbody">
          <tr>
            <th scope="row"></th>
            <td>
              <input
                type="text"
                class="form-control"
                id="exampleInputEmail1"
                name="quantity" 
              />
            </td>
              <td>
              <input
                type="text"
                class="form-control"
                id="exampleInputEmail1"
                name="item" 
              />
            </td>
          </tr>
          <tr>
            <th scope="row"></th>
            <td>
              <input
                type="text"
                class="form-control"
                id="exampleInputEmail1"
                name="quantity" 
              />
            </td>
           
            <td>
              <input
                type="text"
                class="form-control"
                id="exampleInputEmail1"
                name="item" required
              />
            </td>
          </tr>
          <tr>
            <th scope="row"></th>
            <td>
              <input
                type="text"
                class="form-control"
                id="exampleInputEmail1"
                name="quantity" 
              />
            </td>
          
            <td>
              <input
                type="text"
                class="form-control"
                id="exampleInputEmail1"
                name="item" required
              />
            </td>
          </tr>
      

        

      
        </tbody>
<button class="btn btn-light btn-sm mx-2" type="button" id="addrow" ><i class="fa fa-plus"></i></button>
      </table>
      <label for="exampleInputEmail1">Time Taken</label>
      <div class="row">
        <div class="col-4">
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="exampleInputEmail1">Total Time </label>
                <input
                  type="number"
                  class="form-control"
                  id="exampleInputEmail1"
                  placeholder="hours"
                  name="totaltime" required
                />
              </div>
            </div>
            <div class="col"></div>
          </div>
        </div>
        <div class="col-4">
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="exampleInputEmail1">Cooking Time </label>
                <input
                  type="number"
                  class="form-control"
                  id="exampleInputEmail1"
                  placeholder="hours"
                  name="cookingtime" required
                />
              </div>
            </div>
            <div class="col"></div>
          </div>
        </div>
        <div class="col-4">
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="exampleInputEmail1">Preparation Time </label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleInputEmail1"
                  placeholder="hours"
                  name="preptime" required
                />
              </div>
            </div>
            <div class="col"></div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Instructions </label>
        <textarea
          type=""
          class="form-control"
          rows="8"
          id="exampleInputPassword1"
          placeholder=""
          name="instructionsteps" required
        ></textarea>
      </div>
      <div class="form-group">
        <label for="exampleFormControlFile1">Upload Pictures</label>
        <input
          type="file"
          class="form-control-file"
          id="exampleFormControlFile1"
          name="image" required
        />
      </div>
 
      <input
        type="submit"
        class="btn btn-danger btn-block text-center"
        value="Add a Recipe" 
      />
    </form>
