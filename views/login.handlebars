<body>
    <section class="container">
        <div class="parent dark-overlay">
            <div class="card">
                <h5 class="card-title text-center m-3">LOGIN</h5>
                <form class="" name="myform" action="/login" method="POST">
                    <div class="card-body ">

                        <label>Username</label>
                        <div class="form-group ">
                            <input type="text" class="form-control form-control-lg" id="password" name="username" required/>
                        </div>
                        <label>Password</label>
                        <div class="form-group ">
                            <input type="password" class="form-control form-control-lg" id="password" name="password" required/>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-lg btn-danger m-3" id="myBtn" value="submit" />
                           
                            <br>
                            Don't have an account yet? <a href="/signup" class="mt-5">SignUp</a> here.
                           
                        </div>
                </form>

            </div>
        </div>
    </section>
